
<%= flash[:message] %>
<% if user_signed_in? %>
<%= link_to 'Sair', destroy_user_session_path, method: :delete %>
<%else%>
<%= link_to 'Entrar', new_user_session_path %>

<% end %>
<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<%= form_tag(search_recipes_path, method: 'get') do %>
  <%= label_tag(:busca, "Buscar") %>
  <%= text_field_tag(:busca) %>
  <%= submit_tag("Buscar") %>
<% end %>
<%= link_to 'Cadastrar tipo de receita', new_recipe_type_path %>

<% if  user_signed_in? %>
  <%= link_to 'Enviar uma receita', new_recipe_path %>
<% end %>
<% @recipes.each do |recipe| %>
  <h1><%= link_to recipe.title, recipe %></h1>
  <ul>
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine.name %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= recipe.cook_time_min %></li>
  </ul>
  
<% end %>
